@using MCShop_WebApp.Common
@using Model.Entity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>MCShop</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/fonts/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <!-- Google Fonts Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="~/Assest/user/css/bootstrap.min.css">
    <!-- Material Design Bootstrap -->
    <link rel="stylesheet" href="~/Assest/user/css/mdb.min.css">
    <!-- Your custom styles (optional) -->
    <script src="~/Assest/user/js/jquery-1.12.4.js"></script>
    <link rel="stylesheet" href="~/Assest/user/css/style.css">


</head>
<body>
    <!--Navigation & Intro-->
    <!--Main Navigation-->
    <header>

        <nav class="navbar fixed-top navbar-expand-lg navbar-dark  cyan darken-3 scrolling-navbar">
            <a class="navbar-brand" href="~/Book/Index"><strong>MC SHOP</strong></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="~/Book/Index">Home</a>
                    </li>

                    @{var session = (ACCOUNT)Session[CommonConstants.USER_SESSION]; }
                    @if (session != null)
                    {
                        <li class="nav-item dropdown">

                            <a class="nav-link dropdown-toggle waves-effect waves-light"
                               id="navbarDropdownMenuLink-4" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

                                <i class="fas fa-user white-text"></i> Profile
                            </a>

                            <div class="dropdown-menu dropdown-menu-right dropdown-cyan" aria-labelledby="navbarDropdownMenuLink-4">

                                <a class="dropdown-item waves-effect waves-light" href="/doi-matkhau">Đổi mật khẩu</a>

                                <a class="dropdown-item waves-effect waves-light" href="/danhsach-donhang">Xem đơn hàng</a>

                                <a class="dropdown-item waves-effect waves-light" href="/dang-nhap">Log out</a>

                            </div>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/lien-he">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Xin chào <span class="badge-danger">@session.USERNAME</span></a>
                        </li>

                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="~/Admin/User/Index">Sign in</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Admin/User/Register">Sign up</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/lien-he">Contact</a>
                        </li>
                    }


                </ul>
                <ul class="navbar-nav nav-flex-icons">
                    <li class="nav-item">
                        <a class="nav-link dark-grey-text font-weight-bold" onclick="window.location.href='/Cart/ShoppingCart'" data-toggle="modal"
                           data-target="#cart-modal-ex">
                            <i class="fas fa-shopping-cart white-text" aria-hidden="true"></i>
                            <span class="badge danger-color" id="Cart_Amount">Giỏ hàng</span>

                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"><i class="fab fa-twitter"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"><i class="fab fa-instagram"></i></a>
                    </li>
                </ul>
                @using (Html.BeginForm("Index", "Book", FormMethod.Get, new { @class = " search-form" }))
                {

                    <div class="form-group md-form my-0 waves-light">

                        <input type="text" name="searchString" id="searchString" class="form-control" value="@ViewBag.searchString" placeholder="Search">

                    </div>

                }

            </div>
        </nav>

    </header>
    <
    <main>
       
        @RenderBody()


    </main>
    <!--Main Layout-->
    <!-- Background image -->
    <!-- Footer -->
    <footer class="page-footer font-small cyan darken-3 mt-5">

        <!-- Footer Elements -->
        <div class="container">

            <!-- Grid row-->
            <div class="row">

                <!-- Grid column -->
                <div class="col-md-12 py-5">
                    <div class="mb-5 flex-center">

                        <!-- Facebook -->
                        <a class="fb-ic" href="#">
                            <i class="fab fa-facebook-f fa-lg white-text mr-md-5 mr-3 fa-2x"> </i>
                        </a>
                        <!-- Twitter -->
                        <a class="tw-ic">
                            <i class="fab fa-twitter fa-lg white-text mr-md-5 mr-3 fa-2x"> </i>
                        </a>
                        <!-- Google +-->
                        <a class="gplus-ic">
                            <i class="fab fa-google-plus-g fa-lg white-text mr-md-5 mr-3 fa-2x"> </i>
                        </a>
                        <!--Linkedin -->
                        <a class="li-ic">
                            <i class="fab fa-linkedin-in fa-lg white-text mr-md-5 mr-3 fa-2x"> </i>
                        </a>
                        <!--Instagram-->
                        <a class="ins-ic">
                            <i class="fab fa-instagram fa-lg white-text mr-md-5 mr-3 fa-2x"> </i>
                        </a>
                        <!--Pinterest-->
                        <a class="pin-ic">
                            <i class="fab fa-pinterest fa-lg white-text fa-2x"> </i>
                        </a>
                    </div>
                </div>
                <!-- Grid column -->

            </div>
            <!-- Grid row-->

        </div>
        <!-- Footer Elements -->
        <!-- Copyright -->
        <div class="footer-copyright text-center py-3">
            MC Shop - Nơi giá trị nguyên vẹn và tinh hoa tri thức được lên ngôi
        </div>
        <!-- Copyright -->

    </footer>
    <!-- Footer -->
    <!-- jQuery -->
    <script type="text/javascript" src="~/Assest/user/js/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="~/Assest/user/js/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="~/Assest/user/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="~/Assest/user/js/mdb.min.js"></script>
    @RenderSection("jsFooter", required: false)
</body>
</html>
