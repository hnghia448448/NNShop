@model MCShop_WebApp.Areas.Admin.Models.ChangePassModel
@{
    Layout = null;


}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ChangePassword</title>
    <link href="~/fonts/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <!-- Google Fonts Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="~/Assest/user/css/bootstrap.min.css">
    <!-- Material Design Bootstrap -->
    <link rel="stylesheet" href="~/Assest/user/css/mdb.min.css">
    <!-- Your custom styles (optional) -->
    <script src="~/Assest/user/js/jquery-1.12.4.js"></script>
    <link rel="stylesheet" href="~/Assest/user/css/style.css">
</head>
<body>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="" id="modalRegisterForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header text-center">
                            <h4 class="modal-title w-100 font-weight-bold">Đổi mật khẩu</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body mx-3">
                           
                            <div class="md-form mb-4">
                              
                                @Html.TextBoxFor(model => model.oldPass, new { @class = "form-control", @type = "password", @autofocus = "autofocus", @id = "defaultForm-pass" })
                                @Html.ValidationMessageFor(model => model.oldPass, "", new { @class = "text-danger" })

                                <label data-error="wrong" data-success="right" for="orangeForm-pass">Mật khẩu cũ</label>
                            </div>
                            <div class="md-form mb-4">
                               
                                @Html.TextBoxFor(model => model.newPass, new { @class = "form-control", @type = "password", @autofocus = "autofocus", @id = "defaultForm-pass" })
                                @Html.ValidationMessageFor(model => model.newPass, "", new { @class = "text-danger" })

                                <label data-error="wrong" data-success="right" for="orangeForm-pass">Mật khẩu mới</label>
                            </div>
                            <div class="md-form mb-4">
                               
                                @Html.TextBoxFor(model => model.cfNewPass, new { @class = "form-control", @type = "password", @autofocus = "autofocus", @id = "defaultForm-pass" })
                                @Html.ValidationMessageFor(model => model.cfNewPass, "", new { @class = "text-danger" })

                                <label data-error="wrong" data-success="right" for="orangeForm-pass">Xác nhận mật khẩu</label>
                            </div>

                        </div>
                        <div class="modal-footer d-flex justify-content-center">
                            <button class="btn btn-deep-orange" type="submit">Xác nhận</button>
                        </div>
                       
                    </div>
                </div>
            </div>


        </div>

    }


    <script type="text/javascript" src="~/Assest/user/js/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="~/Assest/user/js/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="~/Assest/user/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="~/Assest/user/js/mdb.min.js"></script>
</body>
</html>
